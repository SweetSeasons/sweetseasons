<div class="container-fluid recipes">
  <div class="maindiv">
    <img src="/uploads/picProfile/<%= user.photo %>" alt="photo" style="height:50px">
    <h4>Hello <%= user.name %>!</h4>
    <div>
      <a href="/profile/<%= user.name %>">Your Profile</a> or
      <a href="/login">Log Out</a>
    </div>
  </div>
  <section>
    <div class="imgRecipes">
      <h2>Recipes</h2>
      <img src="<%= recipe.imgUrl %>" alt="No deberia haber foto?" style="height:200px">
      <p>
        <%= recipe.name %> |
          <%= recipe.duration %> |
            <%= recipe.foodProfile %> | Points for complete:
              <%= recipe.points %>
      </p>
    </div>
  </section>
  <section>
    <ul>
      <% recipe.ingredients.forEach(i => { %>
        <li><img src="/img/cookie.jpg" alt="cookie">
          <%= i %>
        </li>
        <% }) %>
    </ul>
  </section>
  <section>
    <p>
      <%= recipe.preparation %>
    </p>
  </section>
</div>
